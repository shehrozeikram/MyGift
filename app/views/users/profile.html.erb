    <form action="#" class="model_search">
      <input type="text" placeholder="Serach" class="inputSearch">
      <button type="submit" class="model-search-btn"><i class="fa fa-search"></i></button>
    </form>
    <ul class="model_menus">
      <li class="model_item"><a href="#" class="model_link">Home</a></li>
      <li class="model_item"><a href="#" class="model_link">Products</a></li>
      <li class="model_item"><a href="#" class="model_link">Cart</a></li>
      <li class="model_item"><a href="#" class="model_link">Sign In</a></li>
    </ul>

    <button class="closeModelMenus"><i class="fa fa-remove"></i></button>
  </div>
</div>
